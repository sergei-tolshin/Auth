PROJECT_NAME='test_movies_api'

# Количество результатов на странице
PAGE_SIZE=10

# Настройки Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Время хранения кэша 5 минут
CACHE_EXPIRE_IN_SECONDS=30

# Настройки Elasticsearch
ELASTIC_HOST=elastic
ELASTIC_PORT=9200
ELASTIC_INDEX='{"films": "test_movies", "genres": "test_genres", "persons": "test_persons"}'

# Локализация
LANGUAGE='ru'
LOCALE_PATH='locale'

# Настройки FastAPI
SERVICE_HOST=api
SERVICE_PORT=8000